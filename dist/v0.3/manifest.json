{
  "manifest_version": 3,
  "name": "Booth Library Search For VRChat v0.3",
  "version": "0.3",
  "description": "VRChat用アバターのBoothライブラリを効率的に検索・フィルタリングする拡張機能（高速化版）",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://booth.pm/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://booth.pm/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Booth Library Search For VRChat v0.3"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}